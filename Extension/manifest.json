{
  "manifest_version": 3,
  "name": "OpenAlex Citation Fetcher",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://api.openalex.org/*",
    "https://doi.org/*",
    "https://pubmed.ncbi.nlm.nih.gov/*",
    "https://api.crossref.org/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
