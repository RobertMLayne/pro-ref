{
    "env": {
        "browser": true,
        "es2021": true,
        "webextensions": true,
        "jest": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "globals": {
        "chrome": "readonly",
        "CONFIG": "readonly",
        "IdentifierParser": "readonly",
        "OpenAlexApiClient": "readonly",
        "CitationProcessor": "readonly",
        "RateLimiter": "readonly"
    },
    "rules": {
        "no-console": "off",
        "prefer-const": "error",
        "no-var": "error",
        "object-shorthand": "error",
        "prefer-arrow-callback": "error",
        "arrow-spacing": "error",
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ]
    },
    "overrides": [
        {
            "files": [
                "tests/**/*.js"
            ],
            "env": {
                "jest": true
            },
            "rules": {
                "no-unused-expressions": "off"
            }
        }
    ]
}
